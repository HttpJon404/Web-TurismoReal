@{
    ViewBag.Title = "Contacto";
}

<!--/header-->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
            
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> Contáctanos</li>
        </ul>
    </div>
</section>

<!-- contacts -->
<section class="w3l-contact-7 pt-5" id="contact">
    <div class="contacts-9 pt-lg-5 pt-md-4">
        <div class="container">
            <div class="top-map">
                <div class="row map-content-9">
                    <div class="col-lg-8">
                        <div class="contact-form">
                            <h5 class="mb-2">Ponerse en contacto</h5>
                            <p class="mb-4">Su dirección de correo electrónico no será publicado. 
                            Los campos obligatorios están marcados*</p>
                            <form action="https://sendmail.w3layouts.com/submitForm" method="post" class="">
                                <div class="form-grid">
                                    <div class="input-field">
                                        <input type="text" name="w3lName" id="w3lName" placeholder="Nombre"
                                               required="">
                                    </div>
                                    <div class="input-field">
                                        <input type="email" name="w3lSender" id="w3lSender" placeholder="Correo"
                                               required="">
                                    </div>
                                </div>
                                <div class="input-field mt-4">
                                    <textarea name="w3lMessage" id="w3lMessage" placeholder="Mensaje"></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-style mt-3">Enviar</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-4 cont-details">
                        <address>
                            <h5 class="">Nuestra oficina central</h5>
                            <p>
                                <span class="fa fa-map-marker"></span>Avenida siempre viva 742, Springfield
                            </p>

                            <h5 class="mt-4 pt-lg-3">Información telefónica</h5>
                            <p>
                                <span class="fa fa-mobile"></span> <strong>Celular :</strong>
                                <a href="tel:+569 1234 5678"> +569 1234 5678</a>
                            </p>

                            <p>
                                <span class="fa fa-phone"></span> <strong>Tel :</strong>
                                <a href="tel:+22 1234 123"> +22 1234 123</a>
                            </p>

                            <p>
                                <span class="fa fa-envelope"></span> <strong>Email :</strong>
                                <a href="mailto:mail@example.com"> mail@example.com</a>
                            </p>
                        </address>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- //contacts -->